@import "../movie-item/movie-template.wxss";
.movie-list-container{
    background-color: #fff;
    display: flex;
    flex-direction: column;
    box-shadow: 0 2px 30px 0 #e5e5e5;
}
.inner-container{
    margin: 0 auto 20rpx;
}
.movie-head{
    padding: 30rpx 20rpx 22rpx;

}
.slogan{
    font-size: 34rpx;
    color: #333;
}
.more{
     float: right; 
}
.more-text{
    vertical-align: middle;
    margin-right: 10rpx;
    color: #666;
}
.more-img{
    width: 9rpx;
    height: 16rpx;
    vertical-align: middle;
}
.movies-container{
    display: flex;
    flex-direction: row;
}